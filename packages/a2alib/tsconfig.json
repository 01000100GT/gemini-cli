{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true, // Often helpful with NodeNext
    "resolveJsonModule": true, // Good practice for importing JSON if needed
    "composite": true
  },
  "include": ["index.ts", "src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
